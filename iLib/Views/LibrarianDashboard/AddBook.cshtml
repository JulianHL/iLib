@model Book
@{
    ViewData["Title"] = "Add New Book";
}


<div class="container">
    <h2 class="mb-4">Add New Book</h2>

    <form asp-controller="LibrarianDashboard" asp-action="AddBookAction" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BookIsbn" class="form-label">ISBN</label>
                <input asp-for="BookIsbn" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label asp-for="BookTitle" class="form-label">Title</label>
                <input asp-for="BookTitle" class="form-control" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BookAuthor" class="form-label">Author</label>
                <input asp-for="BookAuthor" class="form-control" required>
            </div>
            <div class="col-md-6">
                <label asp-for="BookQuantity" class="form-label">Quantity</label>
                <input asp-for="BookQuantity" type="number" class="form-control" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BookFaculty" class="form-label">Faculty</label>
                <select asp-for="BookFaculty" class="form-select" required>
                    <option value="">Select Faculty</option>
                    <option value="Science">Science</option>
                    <option value="Art">Art</option>
                    <option value="Engineering">Engineering</option>
                    <option value="Medicine">Medicine</option>
                    <option value="Economics">Economics</option>
                    <option value="Sociology">Sociology</option>

                </select>
            </div>



        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BookPublisher" class="form-label">Publisher</label>
                <select asp-for="BookPublisher" class="form-select" required>
                    <option value="">Select Publisher</option>
                    <option value="Penguin Random House">Penguin Random House</option>
                    <option value="HarperCollins">HarperCollins</option>
                    <option value="Macmillan Publishers">Macmillan Publishers</option>
                    <option value="Oxford University Press">Oxford University Press</option>
                    <option value="Springer Nature">Springer Nature</option>
                    <option value="Wiley">Wiley</option>
                    <option value="Cambridge University Press">Cambridge University Press</option>
                    <option value="Elsevier">Elsevier</option>
                    <option value="Pearson Education">Pearson Education</option>
                    <option value="Routledge">Routledge</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="BookGenre" class="form-label">Genre</label>
                <select asp-for="BookGenre" class="form-select" required>
                    <option value="">Select Genre</option>
                    <option value="Science">Science</option>
                    <option value="Literature">Literature</option>
                    <option value="History">History</option>
                    <option value="Mathematics">Mathematics</option>
                    <option value="Philosophy">Philosophy</option>
                    <option value="Engineering">Engineering</option>
                    <option value="Computer Science">Computer Science</option>
                    <option value="Art">Art</option>
                    <option value="Social Sciences">Social Sciences</option>
                    <option value="Psychology">Psychology</option>
                    <option value="Medicine">Medicine</option>
                    <option value="Economics">Economics</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BookLanguage" class="form-label">Language</label>
                <select asp-for="BookLanguage" class="form-select" required>
                    <option value="">Select Language</option>
                    <option value="English">English</option>
                    <option value="Spanish">Spanish</option>
                    <option value="French">French</option>
                    <option value="German">German</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Arabic">Arabic</option>
                    <option value="Russian">Russian</option>
                    <option value="Portuguese">Portuguese</option>
                    <option value="Japanese">Japanese</option>
                    <option value="Italian">Italian</option>
                    <option value="Hindi">Hindi</option>
                    <option value="Korean">Korean</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="BookFormat" class="form-label">Format</label>
                <select asp-for="BookFormat" class="form-select" required>
                    <option value="">Select Format</option>
                    <option value="Physical">Physical</option>
                    <option value="Digital">Digital</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="BookEdition" class="form-label">Edition</label>
                <input asp-for="BookEdition" type="number" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="BookPages" class="form-label">Pages</label>
                <input asp-for="BookPages" type="number" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="BookPublicationDate" class="form-label">Publication Date</label>
                <input asp-for="BookPublicationDate" type="date" class="form-control">
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="BookDescription" class="form-label">Description</label>
            <textarea asp-for="BookDescription" class="form-control" rows="3"></textarea>
        </div>

       
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Add Book</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 